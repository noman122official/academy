extends layout
block content
    .row
        form(name="add-course", method="post" action="/course/create")
            .col-md-6
                .form-group
                    label Title
                    input.form-control(name='title', type='text', placeholder='Course Title') 
                .form-group
                    label Details
                    textarea.form-control(name="details", cols="40", rows="5")
                .form-group
                    button.btn.btn-primary(type='submit') Create Course
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    button.btn.btn-warning(type='reset') Reset 

    .row
        .col-sm-12
            h3(style="color:blue")= "Courses" 
            table(class="table table-bordered table-hover table-striped")
                thead
                    tr
                        th Sno.
                        th Name
                        th Course ID
                tbody
                    each course, i in courses
                        tr
                            td #{i+1}
                            td
                                a(href='/course/id/' + course.courseId) #{course.title}
                            td #{course.courseId}
