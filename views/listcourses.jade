extends layout
block content
	.row
		.col-sm-12
			table(class="table table-bordered table-hover table-striped")
				thead
					tr
						th Sno.
						th Title
						th Course Id
						th Details
				tbody
					each course, i in courses
						tr
							td #{i+1}
							td 
								a(href='/course/id/' + course.courseId) #{course.title}
							td #{course.courseId}
							td #{course.details}